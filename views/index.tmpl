<!DOCTYPE html>
<html lang="en" class="h-full dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PleFi</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', '-apple-system', 'BlinkMacSystemFont', 'Segoe UI', 'Roboto', 'sans-serif']
                    },
                    colors: {
                        primary: {
                            DEFAULT: '#4b6bfb',
                            hover: '#3557fa',
                            light: '#e6ebfe'
                        },
                        secondary: {
                            DEFAULT: '#e9ecef',
                            hover: '#dee2e6'
                        },
                        cancel: {
                            DEFAULT: '#ff7675',
                            hover: '#ff6b6b'
                        },
                        donate: {
                            DEFAULT: '#ffb26b',
                            hover: '#ffc988',
                            text: '#7d5a50'
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="font-sans bg-[#1e272e] text-[#f1f2f6] flex flex-col justify-center items-center min-h-screen overflow-x-hidden">
    <div class="bg-[#2d3436] shadow-lg shadow-black/20 p-8 md:p-12 rounded-xl text-center max-w-3xl w-[90%]">
        {{ if .IsAuthenticated }}
            <div class="mb-8">
                <h1 class="text-4xl md:text-[3.5rem] font-extrabold mb-4 tracking-tight text-[#f1f2f6] leading-tight">Hello, {{ .UserInfo.Username }}!</h1>
            </div>
        {{ else }}
            <h1 class="text-4xl md:text-[3.5rem] font-extrabold mb-4 tracking-tight text-[#f1f2f6] leading-tight">PleFi</h1>
            <div class="inline-block px-6 py-2 bg-[#485460] text-[#d2dae2] rounded-full font-semibold mb-10 text-sm tracking-wide">Plex seamless subscription management</div>
            
            <!-- Buy Me a Coffee section moved above subscription details -->
            <div class="my-8 py-6 px-4 rounded-lg bg-[#303842] w-full max-w-md mx-auto">
                <div class="text-center">
                    <h3 class="text-2xl font-bold text-white">Enjoying PleFi?</h3>
                    <p class="mt-2 text-gray-300">Consider buying me a coffee to support my work!</p>
                    <div class="mt-4">
                        <a href="/stripe/donation-checkout" class="inline-block hover:opacity-90 transform hover:-translate-y-0.5 transition-all duration-200">
                            <img class="h-12" src="https://cdn.buymeacoffee.com/buttons/v2/default-yellow.png" alt="Buy Me a Coffee">
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Collapsible Pricing Card -->
            <div class="my-8 max-w-3xl mx-auto">
                <button id="pricingToggle" class="flex items-center justify-center gap-2 w-full text-center py-3 px-6 bg-[#3a4d7c] rounded-lg text-white font-semibold hover:bg-[#465d94] transition-colors">
                    <span>Expand for subscription options</span>
                    <svg id="expandIcon" class="w-5 h-5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>
                
                <div id="pricingDetails" class="hidden mt-4 rounded-lg shadow-lg overflow-hidden lg:flex">
                    <div class="flex-1 px-6 py-8 lg:p-10 bg-[#3a4d7c]">
                        <h3 class="text-2xl font-extrabold text-white sm:text-3xl">Plex Premium Access</h3>
                        <p class="mt-4 text-base text-gray-200">
                            Enhance your Plex experience with premium features and seamless management!
                        </p>
                        <div class="mt-6">
                            <div class="flex items-center">
                                <div class="flex-1 border-t-2 border-gray-600"></div>
                            </div>
                            <ul role="list" class="mt-6 space-y-4 lg:space-y-0 lg:grid lg:grid-cols-2 lg:gap-x-6 lg:gap-y-4">
                                <li class="flex items-start lg:col-span-1">
                                    <div class="flex-shrink-0">
                                        <svg class="h-5 w-5 text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                        </svg>
                                    </div>
                                    <p class="ml-3 text-white">Ad-free streaming experience</p>
                                </li>
                                <li class="flex items-start lg:col-span-1">
                                    <div class="flex-shrink-0">
                                        <svg class="h-5 w-5 text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                        </svg>
                                    </div>
                                    <p class="ml-3 text-white">Advanced content management</p>
                                </li>
                                <li class="flex items-start lg:col-span-1">
                                    <div class="flex-shrink-0">
                                        <svg class="h-5 w-5 text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                        </svg>
                                    </div>
                                    <p class="ml-3 text-white">Priority customer support</p>
                                </li>
                                <li class="flex items-start lg:col-span-1">
                                    <div class="flex-shrink-0">
                                        <svg class="h-5 w-5 text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                        </svg>
                                    </div>
                                    <p class="ml-3 text-white">Regular feature updates</p>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="py-8 px-6 text-center lg:flex-shrink-0 lg:flex lg:flex-col lg:justify-center lg:p-10 bg-[#2c3e63]">
                        <p class="text-lg leading-6 font-medium text-white">Monthly subscription</p>
                        <div class="mt-4 flex items-center justify-center text-5xl font-extrabold text-white">
                            <span>$4.99</span>
                            <span class="ml-3 text-xl font-medium text-gray-50">/month</span>
                        </div>
                        <div class="mt-6">
                            <div class="rounded-md shadow">
                                <button onclick="window.location.href='/stripe/checkout?price_id={{ .PriceID }}'" class="w-full flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 transition-colors">
                                    Subscribe Now
                                </button>
                            </div>
                            <p class="text-gray-300 text-sm mt-3">Cancel anytime, no lock-in</p>
                        </div>
                    </div>
                </div>
            </div>
        {{ end }}

        <div class="flex flex-col items-center gap-3">
            {{ if .IsAuthenticated }}
                <a href="/subscriptions" class="inline-block w-auto bg-[#4b6bfb] hover:bg-[#3557fa] text-white font-bold py-3.5 px-8 rounded-lg shadow-[0_4px_12px_rgba(75,107,251,0.15)] hover:shadow-[0_6px_16px_rgba(75,107,251,0.25)] transform hover:-translate-y-0.5 transition-all duration-200 text-lg">Manage Subscriptions</a>
                
                <!-- Updated Buy Me a Coffee section -->
                <div class="mt-8 py-6 px-4 rounded-lg bg-[#303842] w-full max-w-md">
                    <div class="text-center">
                        <h3 class="text-2xl font-bold text-white">Enjoying PleFi?</h3>
                        <p class="mt-2 text-gray-300">Consider buying me a coffee to support my work!</p>
                        <div class="mt-4">
                            <a href="/stripe/donation-checkout" class="inline-block hover:opacity-90 transform hover:-translate-y-0.5 transition-all duration-200">
                                <img class="h-12" src="https://cdn.buymeacoffee.com/buttons/v2/default-yellow.png" alt="Buy Me a Coffee">
                            </a>
                        </div>
                    </div>
                </div>
            {{ end }}
        </div>
        
        {{ if .IsAuthenticated }}
        <button id="logoutButton" class="mt-8 text-[#a5b1c2] hover:text-[#d1d8e0] hover:bg-[#3d4852] py-2 px-3 rounded text-sm font-medium underline transition-colors duration-200">Sign out</button>
        {{ end }}
    </div>
    
    <div id="statusMessage" class="mt-6 px-5 py-3 rounded-lg hidden font-medium"></div>
    
    <script>
        // Get modal elements
        const statusMessage = document.getElementById('statusMessage');
        const logoutButton = document.getElementById('logoutButton');
        
        // Pricing toggle functionality
        const pricingToggle = document.getElementById('pricingToggle');
        const pricingDetails = document.getElementById('pricingDetails');
        const expandIcon = document.getElementById('expandIcon');
        
        if (pricingToggle) {
            pricingToggle.addEventListener('click', function() {
                pricingDetails.classList.toggle('hidden');
                if (!pricingDetails.classList.contains('hidden')) {
                    expandIcon.classList.add('rotate-180');
                    pricingToggle.querySelector('span').textContent = 'Hide subscription options';
                } else {
                    expandIcon.classList.remove('rotate-180');
                    pricingToggle.querySelector('span').textContent = 'Expand for subscription options';
                }
            });
        }
        
        // Handle logout via JavaScript
        if (logoutButton) {
            logoutButton.addEventListener('click', async function() {
                try {
                    const response = await fetch('/logout', {
                        method: 'GET',
                        headers: {
                            'Accept': 'application/json',
                        },
                        credentials: 'same-origin'
                    });
                    if (response.ok) {
                        // Reload the page to reflect logged out state
                        window.location.reload();
                    } else {
                        console.error('Logout failed:', response.status);
                        // Fallback to direct navigation if the API call fails
                        window.location.href = '/logout';
                    }
                } catch (error) {
                    console.error('Logout error:', error);
                    // Fallback to direct navigation if there's an error
                    window.location.href = '/logout';
                }
            });
        }
    </script>
</body>
</html>
